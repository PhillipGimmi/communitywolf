#!/usr/bin/env sh
. "$(dirname -- "$0")/_/husky.sh"

echo "🔍 Running pre-commit checks..."

# Run linting
echo "📝 Linting..."
npm run lint

# Run type checking
echo "🔍 Type checking..."
npx tsc --noEmit

# Run tests (skip if no test files exist)
echo "🧪 Running tests..."
if [ -d "src" ] && find src -name "*.test.*" -o -name "*.spec.*" | grep -q .; then
  npm run test
else
  echo "⚠️  No test files found, skipping tests"
fi

echo "✅ Pre-commit checks passed!"
