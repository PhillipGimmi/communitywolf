#!/usr/bin/env sh
. "$(dirname -- "$0")/_/husky.sh"

echo "ğŸ” Running pre-commit checks..."

# Run linting
echo "ğŸ“ Linting..."
npm run lint

# Run type checking
echo "ğŸ” Type checking..."
npx tsc --noEmit

# Run tests (skip if no test files exist)
echo "ğŸ§ª Running tests..."
if [ -d "src" ] && find src -name "*.test.*" -o -name "*.spec.*" | grep -q .; then
  npm run test
else
  echo "âš ï¸  No test files found, skipping tests"
fi

echo "âœ… Pre-commit checks passed!"
